<%= render 'shared/navbar_profile' %>

<div class="margin-for-navbar">
  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
          <div class="conversations-list">


            <% @conversations.each do |message| %>

              <div class="conversation-card">

                <%= link_to '', job_request_messages_path(message.job, message.request), class: 'card-link' %>

                <div class="interlocuteur-info">
                  <% if message.request.creator == @user %>
                    <% @interlocutor = message.request.destinator %>
                  <% else %>
                    <% @interlocutor = message.request.creator %>
                  <% end %>

                  <div class="avatar-large avat-pic" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path(@interlocutor.picture.path, :gravity => :face) %>');"></div>

                  <h4><%= @interlocutor.first_name %></h4>
                </div>

                <div class="last-message">
                  <h4><%= message.job.category %></h4>
                  <p><%= message.content %></p>
                </div>

              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





